#page-overview-container
  display flex
  box-sizing border-box
  padding 12px
  height 100vh
  #sankey-container
    position relative
    box-sizing border-box
    width 100%
    height 100%
    &.half
      padding-right 12px
      width 45%
    svg
      width 100%
      height 100%
      .node
        cursor pointer
      .link
        cursor pointer
      text
        cursor pointer
    .sankey-tooltip
      position absolute
      padding 12px
      width 120px
      border-radius 6px
      background rgba(0, 0, 0, 0.8)
      box-shadow 0 0 4px rgba(0, 0, 0, 0.5)
      color #ffffff
  .sub-graph-container
    display flex
    flex-direction column
    width 55%
    #wordcloud-container
      box-sizing border-box
      width 100%
      height 20vh
    #relation-container
      width 100%
      height 80vh
